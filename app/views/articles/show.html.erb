<article>
  <h1><%= @article.title %></h1>

  <p class="text"><%= @article.text %></p>

  <section class="block-comment">
    <h2 class="blc-heading">コメントを書く</h2>
    <%= form_for ([@article, @article.comments.build]) do |f| %>

      <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
      </p>

      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </section>

  <ul class="list-inline">
    <li><%= link_to '編集', edit_article_path(@article), role: 'button', class: 'button size-small' %></li>
    <li><%= link_to '削除',      article_path(@article), role: 'button', class: 'button size-small',
      method: :delete,
      data: { confirm: '削除してもよろしいですか？' }
    %></li>
  </ul>


</article>

<ul>
  <li><%= link_to '一覧に戻る', articles_path %></li>
</ul>
